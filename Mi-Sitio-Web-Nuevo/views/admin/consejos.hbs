<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n<i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- inicio fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px;">
            <h2>Listado de Consejos</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/consejos/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
        {{!-- fin fila 2 --}}
    </div>

    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each consejos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/consejos/modificar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/consejos/eliminar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
            No se encontraron resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}
        </div>
    </div>
</div> {{!-- fin container --}}